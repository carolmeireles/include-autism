<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5B00B7FF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_infor"
        android:layout_width="350dp"
        android:layout_height="33dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="141dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="33dp"
        android:text="Digite a senha para acessar sua Ã¡rea"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bt_acessar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_infor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/imgprincipal_foreground" />

    <Button
        android:id="@+id/bt_acessar"
        android:layout_width="84dp"
        android:layout_height="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="401dp"
        android:background="#FFFFFF"
        android:text="Acessar"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_senha"
        app:layout_constraintTop_toBottomOf="@+id/txt_infor" />

    <EditText
        android:id="@+id/et_senha"
        android:layout_width="180dp"
        android:layout_height="72dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="29dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/bt_cadastrar"
        app:layout_constraintEnd_toStartOf="@+id/bt_acessar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_infor" />

    <Button
        android:id="@+id/bt_cadastrar"
        android:layout_width="130dp"
        android:layout_height="33dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="329dp"
        android:background="#FDFDFD"
        android:text="Cadastrar senha"
        android:textAlignment="center"
        android:textColor="#090000"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_novaSenha"
        app:layout_constraintTop_toBottomOf="@+id/et_senha" />

    <Button
        android:id="@+id/bt_novaSenha"
        android:layout_width="130dp"
        android:layout_height="33dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="65dp"
        android:background="#FDFCFC"
        android:text="Esqueci minha senha"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bt_cadastrar"
        app:layout_constraintEnd_toStartOf="@+id/bt_cadastrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bt_cadastrar" />

</androidx.constraintlayout.widget.ConstraintLayout>